/**
 * Implements hook_help().
 */
function field_wistia_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the field_wistia module.
    case 'help.page.field_wistia':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('The Field Wistia module provides a simple field that allows you to add a Wistia video to a content type, user, or any entity.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function field_wistia_theme() {
  return [
    'field_wistia_video' => [
      'variables' => [
        'video_id' => NULL,
        'url' => NULL,
        'entity_title' => NULL,
        'settings' => [],
      ],
      'file' => 'field_wistia.theme.inc',
    ],
  ];
}

